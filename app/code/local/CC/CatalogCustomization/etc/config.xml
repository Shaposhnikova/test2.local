<?xml version="1.0"?>
<config>
        <modules>
            <CatalogCustomization>
                <version>0.0.1</version>
            </CatalogCustomization>
        </modules>
    <global>
        <models>
            <cc_catalog>
                <class>CatalogCustomization</class>
            </cc_catalog>
        </models>
        <events>
            <catalog_product_get_final_price>
                <observers>
                    <cc_catalog_price_observer>
                        <type>singleton</type>
                        <class>CC_Catalog_Model_Price_Observer</class>
                        <method>apply_discount_percent</method>
                    </cc_catalog_price_observer>
                </observers>
            </catalog_product_get_final_price>
        </events>
    </global>
</config>